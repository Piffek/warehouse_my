<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="150dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.patrykpiwko.warehouse_my.Task2Activity"
    tools:showIn="@layout/activity_task2">



    <TextView
        android:id="@+id/text1"
        android:layout_marginTop="80dp"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@color/red_A700"
        android:gravity="center"
        android:text="Hello World!"
        android:textColor="@color/red_A700" />

    <TextView
        android:id="@+id/text2"
        android:layout_below="@+id/text1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@color/amber_900"
        android:gravity="center"
        android:text="Hello World!"
        android:textColor="@color/amber_900" />

    <TextView
        android:id="@+id/text3"
        android:layout_below="@+id/text2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@color/amber_100"
        android:gravity="center"
        android:text="Hello World!"
        android:textColor="@color/amber_100" />

    <TextView
        android:id="@+id/text4"
        android:layout_below="@+id/text3"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@color/light_green_A200"
        android:gravity="center"
        android:text="Hello World!"
        android:textColor="@color/light_green_A200" />

    <TextView
        android:id="@+id/text5"
        android:layout_below="@+id/text4"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:background="@color/blue_600"
        android:gravity="center"
        android:text="Hello World!"
        android:textColor="@color/blue_600" />

    <TextView
        android:id="@+id/text6"
        android:layout_below="@+id/text5"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:background="@color/purple_A200"
        android:gravity="center"
        android:text="Hello World!"
        android:textColor="@color/purple_A200" />

    <TextView
        android:id="@+id/text7"
        android:layout_below="@+id/text6"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@color/purple_A100"
        android:gravity="center"
        android:text="Hello World!"
        android:textColor="@color/purple_A100" />


</android.widget.RelativeLayout>
